<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit a Film</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit a Film</h1>

    <form action="/films/<%=films._id%>?_method=PUT"method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%=films.title%>"/>
        <label for="year-released">Year Released:</label>
        <input type="number" name="yearReleased" id="year-released" value="<%=films.yearReleased%>" />
        <label for="main-actors">Main Actors:</label>
        <input type="text" name="mainActors" id="main-actors" value="<%=films.mainActors%>" />
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" value="<%=films.description%>"/>
        <label for="thumbnail">ThumbnailImage</label>
        <input type="text" name="thumbnail" id="thumbnail" value="<%=films.thumbnail%>"/> 
        <button type="submit">Edit Film</button>

        <% if (typeof errorMessage !== 'undefined') { %>
           <p class="error"> <%= errorMessage %></p>
       <% } %>
      </form>
   
  </body>
</html>
