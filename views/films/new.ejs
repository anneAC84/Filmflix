<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Add a New Film</title>
  </head>
  <body>

    <div class="new-body">
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="new">
    <h1>Add a New Film!</h1>

    <form action="/films"method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required />
        <label for="year-released">Year Released:</label>
        <input type="number" name="yearReleased" id="year-released" required />
        <label for="main-actors">Main Actors:</label>
        <input type="text" name="mainActors" id="main-actors" required />
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" required />
        <label for="image-URL">Image URL</label>
        <input type="url" name="imageURL" id="image-URL" />
        <button type="submit">Add Film</button>

        <% if (typeof errorMessage !== 'undefined') { %>
           <p class="error"> <%= errorMessage %></p>
          </div>

       <% } %>
      </form>
   </div>
  </body>
</html>
